{
	"compilerOptions": {
		"target": "ES2016",
		"lib": [
			"ES2021",
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"strict": true,
		"alwaysStrict": false,
		"noImplicitUseStrict": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "./",
		"outDir": "out",
		"rootDir": "src",
	},
	"include": [
		"src"
	],
}